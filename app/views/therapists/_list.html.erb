<% if therapists.any? %>
  <div class="row">
    <% therapists.each do |therapist| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card card-therapist rounded-xl shadow-sm h-100">
          <%= link_to therapist, data: { turbo: false } do %>
            <% if therapist.photo.attached? %>
              <%= cl_image_tag therapist.photo.key, crop: :thumb, gravity: :face, class: "card-therapist-img rounded-xl" %>
            <% else %>
              <%= image_tag "default_avatar.png", class: "card-therapist-img" %>
            <% end %>
          <% end %>

          <div class="card-therapist-content d-flex flex-column">
            <h5><%= link_to therapist.name, therapist_path(therapist), class: "card-therapist-title fw-bold" %></h5>
            <p class="mb-1"><strong>Specialties:</strong> <%= therapist.specialty.join(", ") %></p>
            <p class="mb-1"><strong>Languages:</strong> <%= therapist.languages.join(", ") %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if therapists.respond_to?(:total_pages) && therapists.total_pages > 1 %>
    <div class="d-flex justify-content-center mt-4">
      <%= paginate therapists %>
    </div>
  <% end %>
<% else %>
  <p class="text-center text-muted">No therapists found. Try adjusting your search.</p>
<% end %>
