<div class="container my-5">
  <h2 class="text-center mb-4 fw-bold primary">Find a Therapist</h2>

  <%= form_with url: therapists_path, method: :get, local: true, class: "mb-4" do |f| %>
    <div class="input-group d-flex gap-2">
      <%= f.text_field :query,
                      value: params[:query],
                      class: "form-control rounded-xl",
                      placeholder: "Search by name, specialty, language, or location..." %>
      <button class="btn secondary-button px-4" type="submit">Search</button>
    </div>
  <% end %>

  <% if @therapists.any? %>
    <div class="row">
      <% @therapists.each do |therapist| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card shadow-sm h-100">
              <%= link_to therapist do %>
                <% if therapist.photo.attached? %>
                  <%= cl_image_tag therapist.photo.key, width: 400, height: 250, crop: :fill, gravity: :auto, class: "card-img-top" %>
                <% else %>
                  <%= image_tag "default_avatar.png", class: "card-img-top", size: "400x250" %>
                <% end %>
              <% end %>

            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-bold primary"><%= link_to therapist.name, therapist_path(therapist), class: "text-decoration-none" %></h5>
              <p class="mb-1"><strong>Specialties:</strong> <%= (therapist.specialty).join(", ") %></p>
              <p class="mb-1"><strong>Location:</strong> <%= therapist.location %></p>
              <p class="mb-1"><strong>Languages:</strong> <%= (therapist.languages).join(", ") %></p>
              <p class="text-muted mt-2"><%= truncate(therapist.bio, length: 100) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center mt-4">
      <%= paginate @therapists %>
    </div>
  <% else %>
    <p class="text-center text-muted">No therapists found. Try adjusting your search.</p>
  <% end %>
</div>
