<div class="container my-5" style="max-width: 500px;">
  <h2 class="text-center mb-4 primary fw-bold">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form p-4 shadow rounded-sm bg-white" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :name, "Full name", class: "form-label fw-semibold" %>
      <%= f.text_field :name, placeholder: "e.g. John Doe", class: "form-control rounded-pill" %>
    </div>

    <% if resource_name == :therapist %>
      <div class="mb-3">
        <%= f.label :specialty, "", class: "form-label fw-semibold" %>
        <%= f.text_field :specialty, placeholder: "Please seperate specialties by commas", class: "form-control rounded-pill" %>
      </div>

      <div class="mb-3">
        <%= f.label :bio, "", class: "form-label fw-semibold" %>
        <%= f.text_area :bio, rows: 5, placeholder: "e.g. I am a licensed therapist specializing in anxiety and stress management. My approach combines cognitive-behavioral therapy with mindfulness techniques.", class: "form-control rounded-xl" %>
      </div>

      <div class="mb-3">
        <%= f.label :location, "", class: "form-label fw-semibold" %>
        <%= f.text_field :location, placeholder: "e.g. Paris, Remote", class: "form-control rounded-pill" %>
      </div>

      <div class="mb-3">
        <%= f.label :languages, "", class: "form-label fw-semibold" %>
        <%= f.text_field :languages, placeholder: "Please seperate languages by commas", class: "form-control rounded-pill" %>
      </div>

      <div class="mb-3">
        <%= f.label :consultation_fee, "Consultation fee (per hour in â‚¬)", class: "form-label fw-semibold" %>
        <%= f.number_field :consultation_fee, placeholder: "e.g. 150", class: "form-control rounded-pill" %>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :email, class: "form-label fw-semibold" %>
      <%= f.email_field :email, autofocus: true, placeholder: "example@example.com", autocomplete: "email", class: "form-control rounded-pill" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label fw-semibold" %>
      <% if @minimum_password_length %>
        <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-pill" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "form-label fw-semibold" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-pill" %>
    </div>

    <div class="mb-3">
      <%= f.label :avatar, "Profile picture", class: "form-label fw-semibold" %>
      <%= f.file_field :avatar, class: "form-control" %>
    </div>

    <div class="d-grid">
      <%= f.submit "Sign up", class: "btn primary-button btn-lg rounded-pill shadow-sm" %>
    </div>
  <% end %>

  <div class="text-center mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
